<odoo>
    <record id="view_stage_tree" 
        model="ir.ui.view">
        <field name="name">project.management.stage.tree</field>
        <field name="model">project.management.stage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="sequence"/>
                <field name="fold"/>
                <field name="is_final"/>
            </tree>
        </field>
    </record>

    <record id="view_stage_form" model="ir.ui.view">
        <field name="name">project.management.stage.form</field>
        <field name="model">project.management.stage</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="sequence"/>
                    <field name="fold"/>
                    <field name="is_final"/>
                </group>
            </form>
        </field>
    </record>
</odoo>